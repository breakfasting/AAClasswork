<h1>New user sign up</h1>

<form action="<%= users_url %>" method="POST">
  <%= render 'layouts/auth' %>
  
  <label>
    Email:
    <input type="text" name="user[email]">
  </label>
  <label>
    Password:
    <input type="password" name="user[password]">
  </label>
  <input type="submit" value="Sign Up!">
</form>